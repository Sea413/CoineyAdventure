<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - CoinyMarvel</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        <environment names="Development">
            <link rel="stylesheet" href="~/css/materialize.css" />
            <link rel="stylesheet" href="~/css/site.css" />
        </environment>
        <environment names="Staging,Production">
            <link rel="stylesheet" href="~/css/materialize.min.css" />
            <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        </environment>
    </head>
    <body>

        <div class="navbar-fixed">
            <nav>
            <div class="nav-wrapper">
               
                    <a asp-controller="Home" asp-action="Index" class="brand-logo">CoinyMarvel</a>
                    <ul id="nav-mobile" class="right hide-on-med-and-down">
                        <li>ohai</li>
                    </ul>
             
            </div>
        </nav>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2016 - CoinyMarvel</p>
            </footer>
        </div>

        <environment names="Development">
            <script src="../js/jquery.es5.js"></script>
            <script src="../js/materialize.es5.js"></script>
            <script src="../js/site.js" asp-append-version="true"></script>
        </environment>
        <environment names="Staging,Production">
            <script src="../js/jquery.es5.min.js"></script>
           
            <script src="../js/materialize.es5.min.js"></script>
        
            <script src="../js/site.min.js" asp-append-version="true"></script>
        </environment>

        @RenderSection("scripts", required: false)
    </body>
</html>
